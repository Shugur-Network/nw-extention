{
  "manifest_version": 3,
  "name": "Nostr Web Browser",
  "version": "1.0.0",
  "description": "Browse decentralized websites on Nostr. Censorship-resistant, verifiable, permanent web content.",
  "author": "Nostr Web Project",
  "homepage_url": "https://github.com/Shugur-Network/nw-extention",
  "permissions": ["offscreen", "storage", "webNavigation", "alarms"],
  "host_permissions": ["https://dns.google/*", "https://cloudflare-dns.com/*"],
  "background": { "service_worker": "sw.js", "type": "module" },
  "action": {
    "default_title": "Open Nostr Web Browser",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "viewer.js",
        "renderer.html",
        "renderer.js",
        "content.html",
        "content.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
